# Test Environment Configuration
APP_NAME=gofiber-skeleton-test
APP_ENV=test
APP_VERSION=1.0.0-test
DEBUG=true

# Server Configuration
HOST=localhost
PORT=3001
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s

# Database Configuration
HOST=localhost
PORT=5432
USER=postgres
PASSWORD=postgres
NAME=gofiber_skeleton_test
SSLMODE=disable
MAX_OPEN_CONNS=25
MAX_IDLE_CONNS=5
CONN_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET=test-secret-key-for-integration-testing-only-do-not-use-in-production
JWT_EXPIRY=24h

# Redis Configuration (for testing, if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization